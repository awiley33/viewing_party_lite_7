<%= render partial: "shared/nav" %>


<h1>Discover Movies Page</h1><br><br>

<%= button_to "Top Rated Movies", user_movies_path(@user), method: :get, params: { :search => "top_rated" } %>

<br><br>

<h3>Search By Movie Title</h3><br>
<%= form_with url: user_movies_path(@user), method: :get, local: true do |f| %>
  <%= f.label :search %>
  <%= f.text_field :search %>
  <%= f.submit "Search" %>
<% end %>

